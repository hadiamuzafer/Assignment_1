//Q16
let guestlist: string[] = ["fatima", "malika", "ayesha"];

// Inform about the bigger dinner table
console.log("Good news! We found a bigger dinner table.");

// Add a new guest to the beginning of the array
guestlist.unshift("Hifza");

// Add a new guest to the middle of the array
let  middleIndex = Math.floor(guestlist.length / 2);
guestlist.splice(middleIndex, 0, "zainab");

// Add a new guest to the end of the array using append()
guestlist.push("arooj");

// Print invitation messages
for (let guest of guestlist) {
    console.log(`Dear ${guest}, you are invited to dinner. Please  come and join us thank you!.`);
}

